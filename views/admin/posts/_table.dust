<div class="table-responsive">
  <table class="table table-sm table-hover">
    <thead>
      <tr>
        <th class="th-page-title">Titre</th>
        <th class="th-page-updated-at">Derni√®re modification</th>
        <th class="th-page-actions" width="110"></th>
      </tr>
    </thead>
    {#pages}
      <tr>
        <td class="td-page-title td-level-{.level}">
          <a href="{options.adminpath}/cms/posts/{.id}/edit">{?.title}{.title}{:else}Sans titre{/.title}</a>
          <br/>
          <span class="slug">{.slug} </span>
          <span class="badge badge-info">{.category}</span>
        </td>
        <td class="td-page-date">{@dateformat date=.updated_at /}</td>
        <td class="actions text-right">
          <a href="{options.adminpath}/cms/posts/{.id}/edit" class="btn btn-sm btn-dark" ><i class="fas fa-edit"></i></a>
          &nbsp;<a href="{options.adminpath}/cms/posts/new?copy={.id}" class="btn btn-sm btn-dark" ><i class="fas fa-copy"></i></a>
          {@ne key=.status value="trashed"}
            &nbsp;<a href="{options.adminpath}/cms/posts/{.id}/trash" onclick="return window.confirm('Supprimer ?');" class="btn btn-sm btn-danger" ><i class="fas fa-trash"></i></a>
          {/ne}
        </td>
      </tr>
    {/pages}
  </table>
</div>