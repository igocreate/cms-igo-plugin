
{> "{options.adminlayout}" /}

{<content}

  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{options.adminpath}">Admin</a></li>
    <li class="breadcrumb-item"><a href="{options.adminpath}/cms">CMS</a></li>
    <li class="breadcrumb-item"><a href="{options.adminpath}/cms/posts">Blog Posts</a></li>
    <li class="breadcrumb-item active">Nouveau Post</li>
  </ol>

  <div class="cms-igo-plugin">
    <p class="text-right">
      <a href="{options.adminpath}/cms/posts/new" class="btn btn-secondary" ><i class="fa fa-edit" ></i> Nouveau Post...</a>
    </p>

    <form action="{options.adminpath}/cms/posts" id="form-page" method="POST">
      <div class="row">
        <div class="col-sm-8">
          {> "{dirname}/views/admin/pages/_form.dust" /}
        </div>
        <div class="col-sm-4">
          {> "{dirname}/views/admin/pages/_sidebar.dust" hideparent="true" /}
        </div>
      </div>
    </form>

    {> "{dirname}/views/admin/pages/_modal.dust" /}
  </div>

{/content}
